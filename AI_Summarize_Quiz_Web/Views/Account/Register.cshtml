@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<section class="py-3 py-md-5 py-xl-8">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                <div class="dp01 card border border-dark rounded-4">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <form method="post" asp-controller="Account" asp-action="Register">
                            <p class="text-center mb-4 text-light">Register</p>
                            <div class="row gy-3 overflow-hidden">
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Username" type="text" class="form-control border-dark text-light" id="username" placeholder="Username" style="background-color: #121212">
                                        <label for="username" class="form-label text-light">Username</label>
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="password" asp-for="Password" class="form-control border-dark text-light" id="password" placeholder="Password" style="background-color: #121212">
                                        <label for="password" class="form-label text-light">Password</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="password" asp-for="ConfirmPassword" class="form-control border-dark text-light" id="confirmPassword" placeholder="Confirm Password" style="background-color: #121212">
                                        <label for="confirmPassword" class="form-label text-light">Confirm Password</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-grid">
                                        <button class="btn btn-primary btn-lg" type="submit">Register</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-4 text-light">
                    Already registered? <a asp-controller="Account" asp-action="LogIn" class="link-secondary text-decoration-none">Log in</a>
                </div>
            </div>
        </div>
    </div>
</section>

